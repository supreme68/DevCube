<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
</head>
<body>

    <!--NavBar-->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top">
        @Html.ActionLink("Dev - Cube", "Index", "Home", null, new { @class = "navbar-brand" })
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Technologies", "Technologies", "Home", null, new { @class = "nav-link" })
            </li>
        </ul>
    </nav>

    <!--Footer-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DevCube</p>
        </footer>
    </div>

    @Scripts.Render("https://code.jquery.com/jquery-3.3.1.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>

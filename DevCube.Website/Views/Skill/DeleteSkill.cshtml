
@model SkillModel

@{
    ViewBag.Title = "Delete";
}

<!-- Title-->
<h2>Delete</h2>
<h3>Are you sure you want to delete this skill?</h3>

<!--Forms-->
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => modelItem.Name)
        </dd>
        <dt>
            Known By
        </dt>
        <dd>
            @{int i = 0;}
            @foreach (var programmer in Model.Programmers)
            {
                i++;

                var FullName = String.Concat(programmer.FirstName, " ", programmer.LastName, ", ");

                if (i == Model.Programmers.Count())
                {
                    FullName = String.Concat(programmer.FirstName, " ", programmer.LastName);
                }

                @Html.DisplayFor(modeItem => FullName);
                
            }
        </dd>
    </dl>

    <button class="btn btn-default" data-toggle="modal" data-target="#DeleteModal">Delete</button>
    @Html.ActionLink("Back to List", "IndexSkill", null, new { @class = "btn" })
</div>

<!--Modal-->
@using (Html.BeginForm())
{
    <div class="modal fade" id="DeleteModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Woah There!</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this skill!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <input type="submit" class="btn btn-default" value="Yes">
                </div>
            </div>
        </div>
    </div>
}

@model IEnumerable<ProgrammerModel>
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this programmer ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        @foreach (var item in Model)
        {
            int i = 0;
            <dt>
                Full Name
            </dt>

            <dd>
                @Html.DisplayFor(model => item.FirstName)
                @Html.DisplayFor(model => item.LastName)
            </dd>

            <dt>
                Skills
            </dt>

            <dd>
                @foreach (var skill in item.Skills)
                {
                    i++;

                    string skillName = skill.Name + " ,";

                    if (i == item.Skills.Count)
                    {
                        skillName = skill.Name;
                    }

                    @Html.DisplayFor(modelItem => skillName)
                }
            </dd>
        }
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn" /> |
            @Html.ActionLink("Back to List", "IndexProgrammer", null, new { @class = "btn" })
        </div>
    }
</div>

@model ProgrammerModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Programmer's known skills</h4>
        <hr />


        <div class="form-group">
            <strong>
                @Html.DisplayFor(modelItem => modelItem.FirstName)
                @Html.DisplayFor(modelItem => modelItem.LastName)
                @Html.HiddenFor(modeItem => modeItem.ProgrammerID)
            </strong>
            <br />
            @foreach (var skills in Model.Skills)
            {
                @skills.Name
                <input type="checkbox" name="SkillIDs" value="@skills.SkillID" checked="@skills.IsChecked" />
                    <br />
            }
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "IndexProgrammer", null, new { @id = "button", @class = "btn btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
